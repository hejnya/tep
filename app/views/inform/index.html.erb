
<h1>Inform <%= @form %> </h1>

<% count = 0 %>

<table class='table'>
  <tr>
    <th>#</th>
    <th>ua</th>
    <% @keys.each do |k| %>
      <th><%= k.titleize %></th>
    <% end%> 
  </tr>
  <% @informs.each do  |inform| %>
    <% jdata = inform.jdata %>
    <tr>
      <td><%= count += 1 %></td>
      <td><span title="<%= inform.user_agent %>">*</span></td>
      <% @keys.each do |k| %>
        <td><%= jdata[k] || 'undef' %></td>
      <% end%> 
      <td>
        <%= form_tag inform_del_url(inform.id)   do  %>
          <input type=submit value="del">
        <% end%>
      </td>
    </tr>
  <% end %>
</table>

<ul>
<% @forms.each do |form| %>
  <li><%=link_to form[:form]||'-', inform_index_path(form[:form]) %></li>
<% end %>
</ul>
