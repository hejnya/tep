
<h3>Sosna config</h3>

<% translate = { :annual => 'ročník', :round => 'série' } %>

<%= form_for :config, :url => {:action => :update}, :html =>  {:class => 'form-horizontal'}  do |f| %>

  <% @config.each do |key,val|  %>
   <div class="control-group">
     <% key_tr = translate[key] || key %>
     <label class="control-label" for=""><%= key_tr.capitalize%></label>
     <div class="controls"> <%= text_field :config, key, value: val %> </div>
   </div>
  <% end %>
  <div class="control-group">
    <div class="controls"><%= f.submit :class=>'btn btn-primary', :value=>'Uložit' %></div>
  </div>
<% end %>

