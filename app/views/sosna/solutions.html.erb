  <tr> 
   <th>id</td>
   <th>year</td>
   <th>round</td>
   <th>problem_no</td>
   <th>filename</td>
 </tr> 
<% @problems.each do |p| %>
  <tr>
    <td><%= link_to p.id, :controller => :sosna, :action => :problem, :id => p.id %></a><td>
