
<h3>Sosna config</h3>

<%= form_for :config, :url => {:action => :config_save}, :html =>  {:class => 'form-horizontal'}  do |f| %>

  <% @config.each do |key,val|  %>
   <div class="control-group">
     <label class="control-label" for=""><%= key.capitalize%></label>
     <div class="controls"> <%= text_field :config, key, value: val %> </div>
   </div>
  <% end %>
  <div class="control-group">
    <div class="controls"><%= f.submit :class=>'btn btn-primary', :value=>'Save' %></div>
  </div>
<% end %>

