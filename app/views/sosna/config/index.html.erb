
<h3>Sosna config</h3>

<% translate = { :annual => 'ročník',
                 :round => 'série' ,
                 :allow_upload => 'Povolit upload řešení (yes/no)',
                 :show_revisions => 'Zobrazit opravené řešení (yes/no)',
                 } %>

<%= form_for :config, :url => {:action => :update}, :html =>  {:class => 'form-horizontal'}  do |f| %>

  <% @config.each do |key,val|  %>
   <div class="control-group">
     <% key_tr = translate[key] || key %>
     <label class="control-label" for=""><%= key_tr.capitalize%></label>
     <div class="controls">
       <% if val == true || val == false %> 
         <%= check_box_tag "config[#{key}]", checked: val %>
       <% else %>
         <%= text_field :config, key, value: val %>
       <% end %>
     </div>
   </div>
  <% end %>
  <div class="control-group">
    <div class="controls"><%= f.submit :class=>'btn btn-primary', :value=>'Uložit' %></div>
  </div>
<% end %>

