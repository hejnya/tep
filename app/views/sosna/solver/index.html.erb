<%= heading_with_tools "Seznam řešitelů #{@annual}. ročníku" do %>

    <%= link_to 'Založit nového řešitele',
                { action: :new },
                { :class=> 'btn btn-primary'} %>

    <%= link_to 'Lidi.pik',
                { format: 'pik'},
                { :class=> 'btn btn-primary'} %>

    <%= link_to 'Štítky.pdf',
                { action: :labels },
                { :class=> 'btn btn-primary'} %>
    <%= link_to 'Tep emails',
                { action: :tep_emails },
                { :class=> 'btn btn-primary'} %>
<% end %>

    <table class="table table-bordered">
      <tr>
       <th>Id</th>
       <th title="Uživatel">Už.</th>
       <th>Jméno</th>
       <th>Příjmení</th>
       <th>Škola</th>
       <th>P</th>
       <th>Ročník</th>
       <th>Kam</th>
       <th>Jak</th>
       <th>Adresa</th>
     </tr>
    <% @solvers.each do |s| %>
      <tr <%if s.is_test_solver%> class="warning"<%end%>>
        <td>
           <%= link_to s.id, :action => :show, :id => s.id %></a>
           <%if s.is_test_solver %> <i title="TESTOVACÍ ŘEŠITEL" class="fa fa-crosshairs"></i> <% end %></td>
        <td>
           <% if s.user %>
             <% if !s.user_email_consistent? %><span title="řešitel nemá stejný email jako jeho uživatel">!!!</span><% end %>
               <% if current_user.admin? %>
                 <%= link_to s.user.id, user_show_path(s.user.id)%>
               <% else %>
                 <%= s.user.id %>
               <% end %>
           <% else %>
             NONE!!!!!!
           <% end %>
        </td>
        <td>
            <%= s.name %></td>
        <td><%= s.last_name %></td>
        <td>
          <% if s.school %>
             <% sch = s.school %>
             <span title="<%= sch.long %>"><%= link_to sch.short||'?', :controller =>  'sosna/school', :action => :show, :id => sch.id %></span>
          <% else %>
             -
          <% end %>
        </td>
    
        <td><%= s.sex %></td>
        <td><%= s.grade %> </td>
        <td><%= s.where_to_send %> </td>
        <td><%= s.solution_form %> </td>
        <td><%= s.address %> </td>
      </tr>
    <% end %>
    </table>

