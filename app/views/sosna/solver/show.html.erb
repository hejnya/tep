
<h1>Editace řešitele</h1>

<%= render partial: 'form', locals: { is_edit: true } %>


<hr>
<% user = @solver.user %>
<% if user %>
   Řešitel je uživatelem tepu <%= link_to "#{user.name} #{user.last_name} (#{user.email})" , user_show_path(user.id) %>.
<% else %>
  Řešitel nemá nemá uživatele
<% end %>
<hr>

<% if can? :delete, Sosna::Solver %>
  <%= form_tag sosna_solver_delete_path(id:@solver.id) do %>
    <%= submit_tag  'Smazat řešitele (nebude žádné "jsi si jistý?")', :class=>'btn btn-danger' %></div>
  <% end %>
<% else %>
    <%= submit_tag  'Smazat řešitele může adm', :class=>'btn disabled' %></div>
<% end %>
